<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_auth" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="76dp"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sentToMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inter_medium_500"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:text="@string/sent_email"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:translationY="-2.32sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/inter_regular_400"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:text="@string/enter_verification"
            android:textColor="#808080"
            android:textSize="14sp"
            android:translationY="-2.32sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_fill_selected"
                android:cursorVisible="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusForward="@id/edt2" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_fill_selected"
                android:cursorVisible="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusForward="@id/edt3" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_fill_selected"
                android:cursorVisible="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusForward="@id/edt4" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_fill_selected"
                android:cursorVisible="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusForward="@id/edt5" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_fill_selected"
                android:cursorVisible="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusForward="@id/edt6" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt6"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_fill_selected"
                android:cursorVisible="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1" />

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/btndisabled_color"
            android:fontFamily="@font/inter_semibold_600"
            android:gravity="center"
            android:text="@string/continue_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="7dp"
            android:id="@+id/btnContinue"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="29dp"
            android:background="#DFDFE0" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="@string/didnt_receive"
            android:textColor="#5E6872" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="86dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:lineSpacingExtra="6sp"
            android:text="@string/resend_code"
            android:textColor="#3367FF"
            android:translationY="-2.94sp"
            android:id="@+id/resendCodeText"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>
