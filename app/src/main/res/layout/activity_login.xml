<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_auth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="49dp"
        android:fontFamily="@font/inter_medium_500"
        android:text="@string/login_into"
        android:textColor="#1D2C3C"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/inter_regular_400"
        android:text="@string/login_account"
        android:textColor="#5E6872"
        android:textSize="16sp" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="28dp"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accountIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="15dp"
            android:text="@string/account_id"
            android:textColor="#6F6E73" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/account_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="14dp"
                android:background="@drawable/bg_edittext_fill_selected"
                android:fontFamily="@font/inter_regular_400"
                android:hint="@string/account_hint"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingHorizontal="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="2dp"
                android:layout_marginEnd="80dp"
                android:background="#DFDFE0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/inter_medium_500"
                android:text=".near"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/inter_semibold_600"
            android:gravity="center"
            android:text="@string/login_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="7dp"
            android:id="@+id/btnLogin"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="86dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:text="@string/dont_have_account"
        android:textColor="#5E6872"
        android:translationY="-2.94sp"
        android:id="@+id/createAccountView"/>


</LinearLayout>
